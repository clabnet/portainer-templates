# =============================================================================
# HOMELAB DOCKER-COMPOSE ENVIRONMENT CONFIGURATION
# =============================================================================

# -----------------------------------------------------------------------------
# GLOBAL SETTINGS
# -----------------------------------------------------------------------------
TZ=Europe/Rome
# -----------------------------------------------------------------------------
# ADGUARD HOME
# -----------------------------------------------------------------------------
ADGUARD_HTTP_PORT=8090
ADGUARD_HTTPS_PORT=8443
ADGUARD_SETUP_PORT=3000

# -----------------------------------------------------------------------------
# DOZZLE (LOG VIEWER)
# -----------------------------------------------------------------------------
DOZZLE_HTTP_PORT=9999

# -----------------------------------------------------------------------------
# HOMEPAGE DASHBOARD
# -----------------------------------------------------------------------------
HOMEPAGE_HTTP_PORT=3000
HOMEPAGE_ALLOWED_HOSTS=localhost
#HOMEPAGE_CONFIG_DIR=./homepage/config
#HOMEPAGE_ENV_FILE=./homepage/config/.env

# -----------------------------------------------------------------------------
# NGINX PROXY MANAGER
# -----------------------------------------------------------------------------
NPM_HTTP_PORT=80
NPM_HTTPS_PORT=443
NPM_ADMIN_PORT=81
NPM_DISABLE_IPV6=true

# -----------------------------------------------------------------------------
# IMMICH (PHOTO MANAGEMENT)
# -----------------------------------------------------------------------------
IMMICH_VERSION=release
IMMICH_HTTP_PORT=2283

# Database Configuration
DB_PASSWORD=your_secure_password_here
DB_USERNAME=postgres
DB_DATABASE_NAME=immich

# Storage Locations
UPLOAD_LOCATION=./immich/uploads
DB_DATA_LOCATION=./immich/postgres
ML_CACHE_LOCATION=./immich/ml-cache
REDIS_DATA_LOCATION=./immich/redis-data